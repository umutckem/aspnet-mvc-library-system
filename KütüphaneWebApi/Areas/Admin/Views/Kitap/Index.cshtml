@model IEnumerable<KütüphaneWebApi.Models.Kitap>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            color: #333;
            display: flex;
        }

        .container {
            margin-top: 30px;
            flex-grow: 1;
        }

        h1 {
            font-size: 2.5rem;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Sol Menü */
        .sidebar {
            width: 250px;
            background-color: #343a40;
            color: #fff;
            padding-top: 20px;
            position: fixed;
            height: 100%;
        }

            .sidebar .btn-group {
                display: block;
                margin: 10px 0;
            }

            .sidebar .btn {
                padding: 12px 25px;
                font-size: 16px;
                text-align: left;
                width: 100%;
                border-radius: 5px;
                margin-bottom: 10px;
            }

            .sidebar .btn-warning {
                background-color: #ffc107;
                border: none;
            }

                .sidebar .btn-warning:hover {
                    background-color: #e0a800;
                }

            .sidebar .btn-dark {
                background-color: #343a40;
                border: none;
            }

                .sidebar .btn-dark:hover {
                    background-color: #23272b;
                }

        .sidebar-header h3 {
            font-size: 1.5rem;
            color: #fff;
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
        }


        /* İçeriği ortalamak için */
        .content {
            margin-left: 270px; /* Menü genişliği kadar boşluk bırak */
            padding: 20px;
            width: 100%;
        }

        .table {
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            margin-left: auto;
            margin-right: auto;
        }

            .table th, .table td {
                text-align: center;
                padding: 12px;
            }

            .table th {
                background-color: #f8f9fa;
                color: #333;
            }

            .table td {
                color: #666;
            }

            .table tr:hover {
                background-color: #f1f1f1;
            }

            .table img {
                width: 50px;
                height: 50px;
                object-fit: cover;
                border-radius: 5px;
            }

            .table .btn-sm {
                padding: 5px 10px;
                font-size: 14px;
            }

            .table .btn-primary {
                background-color: #007bff;
                border: none;
            }

                .table .btn-primary:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>

    <!-- Sol Menü -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h3>Admin Paneli</h3>
        </div>
        <div class="btn-group">
            <a href="/Admin/Kitap/Index" class="btn btn-warning">Personel Paneli</a>
        </div>
        <div class="btn-group">
            <a href="/Admin/Kitap/KitapEkle" class="btn btn-warning">Kitap Ekle</a>
        </div>
        <div class="btn-group">
            <a href="/Admin/Kitap/Kullanici" class="btn btn-warning">Kullanicilar</a>
        </div>
        <div class="btn-group">
            <a href="/Admin/Kitap/Destek" class="btn btn-warning">Destek</a>
        </div>
        <div class="btn-group">
            <a href="/Kitaps/Index" class="btn btn-dark">Ana Menü</a>
        </div>
    </div>

    <!-- İçerik Alanı -->
    <div class="content">
        <h1>Admin Paneli</h1>

        <!-- Kitaplar Tablosu -->
        <h3 class="text-center">Kitaplar Listesi</h3>
        <table id="kitaplarTablosu" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Kitap Resmi</th>
                    <th>Kitap Adı</th>
                    <th>Kitap Yazarı</th>
                    <th>Yazım Tarihi</th>
                    <th>Alım Tarihi</th>
                    <th>Aktiflik</th>
                    <th>Basım Numarası</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var kitap in Model)
                    {
                        <tr>
                            <td><img src="@kitap.kitapImg" alt="Kitap Resmi"></td>
                            <td>@kitap.kitapAd</td>
                            <td>@kitap.kitapYazari</td>
                            <td>@kitap.kitapYazimTarihi</td>
                            <td>@kitap.kitapAlimTarihi</td>
                            <td>@kitap.aktiflik</td>
                            <td>@kitap.basımNumarasi</td>
                            <td>
                                <a href="/Admin/Kitap/Guncelle/@kitap.Id" class="btn btn-primary btn-sm">Detay</a>
                                <a href="/Admin/Kitap/Guncelle2" class="btn btn-info btn-sm">Guncelle</a>
                                <button class="btn btn-danger btn-sm" onclick="showConfirmModal('@kitap.Id')">Sil</button>
                            </td>

                            <!-- Modal -->
                            <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDeleteModalLabel">Silme İşlemini Onayla</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Bu kitabı silmek istediğinizden emin misiniz?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                                            <a id="deleteConfirmBtn" href="#" class="btn btn-danger">Sil</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center">Hiçbir kitap bulunamadı.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#kitaplarTablosu').DataTable({
                language: {
                    search: "Arama:",
                    lengthMenu: "Sayfada _MENU_ kayıt göster",
                    info: "_TOTAL_ kayıttan _START_ ile _END_ arası gösteriliyor",
                    infoEmpty: "Gösterilecek kayıt yok",
                    paginate: {
                        first: "İlk",
                        last: "Son",
                        next: "Sonraki",
                        previous: "Önceki"
                    },
                }
            });
        });

        function showConfirmModal(kitapId) {
            const deleteUrl = `/Admin/Kitap/KitapSil/${kitapId}`;
            document.getElementById('deleteConfirmBtn').setAttribute('href', deleteUrl);
            const modal = new bootstrap.Modal(document.getElementById('confirmDeleteModal'));
            modal.show();
        }
    </script>
</body>
</html>
