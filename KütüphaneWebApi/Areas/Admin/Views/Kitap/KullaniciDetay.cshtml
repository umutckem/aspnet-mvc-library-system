@model IEnumerable<KütüphaneWebApi.Models.Kitap>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcı Detay - Admin Paneli</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-warning">
                @ViewBag.Message
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <h3 class="text-center">Kullanıcının Aldığı Kitaplar</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Kitap Yazarı</th>
                        <th>Yazım Tarihi</th>
                        <th>Alım Tarihi</th>
                        <th>Aktiflik Durumu</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kitap in Model)
                    {
                        <tr>
                            <td>@kitap.kitapAd</td>
                            <td>@kitap.kitapYazari</td>
                            <td>@kitap.kitapYazimTarihi</td>
                            <td>@kitap.kitapAlimTarihi</td>
                            <td>@kitap.aktiflik</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">
                Bu kullanıcıya ait alınan hiçbir kitap bulunmamaktadır.
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
